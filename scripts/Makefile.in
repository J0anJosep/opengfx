# TTDPatch bundle:
$(TTDP_BUNDLE): $(GRF_FILES) $(DOC_FILES) $(TTDP_DOC)
	$(_E) "[BUNDLE] for TTDPatch"
	$(_V) -rm -rf $@
	$(_V) mkdir $@
	$(_V) for i in $(GRF_FILES); do cp $$i $@/`echo $$i | sed -e 's/ogfx\([1|c|h|i|t]\)_[a-z]*/trg\1r/'` ; done
	$(_V) cp $(DOC_FILES) $@/
	$(_V) cp $(TTDP_DOC) $@/

$(TTDP_BUNDLE)-$(VERSION_STRING).zip: $(TTDP_BUNDLE)
	$(_E) "[ZIP] $<"
	$(_V) pushd $< && $(ZIP) $(ZIP_FLAGS) ../$@ * >/dev/null && popd

bundle_ttdp: $(TTDP_BUNDLE)-$(VERSION_STRING).zip

nml2nfo: $(BNML_FILES) $(PNML_FILES)
	$(_E) "[NML2NFO]"
	$(_V) for i in $(BNML_FILES); do echo "[NML] $$i"; $(CC) -D REPO_REVISION=$(REPO_REVISION) $(CC_FLAGS) $$i | $(NML) $(NML_FLAGS) --nfo `echo "$$i" | sed "s/nml/nfo/g" | sed "s/bnfo/pnfo/"` --start-sprite=`echo "$$i" | cut -d- -f2 | sed "s/^0*//"`; done
	$(_V) for i in $(PNML_FILES); do echo "[NML] $$i"; $(CC) -D REPO_REVISION=$(REPO_REVISION) $(CC_FLAGS) $$i | $(NML) $(NML_FLAGS) --nfo `echo "$$i" | sed "s/nml/nfo/g"`; done