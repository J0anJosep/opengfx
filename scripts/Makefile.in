%.nml: %.pnml
	$(_V) $(CC) -D REPO_REVISION=$(REPO_REVISION) $(CC_FLAGS) $< > $@

sprites/nfo/base/%.pnfo: sprites/nml/base/%.nml
	$(_E) "[NML2NFO] $@"
	$(_V) $(NML) $(NML_FLAGS) --nfo $@ --start-sprite=`echo "$<" | cut -d- -f2 | sed "s/^[0]*\([0-9]\)/\1/"` $<

